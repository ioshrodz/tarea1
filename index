<body>
  <header>
    <h1>游닞 C치mara Inteligente</h1>
    <p>Di la palabra <strong>"captura"</strong> para tomar una foto autom치ticamente.</p>
  </header>

  <main>
    <video id="videoCam" autoplay playsinline></video>
    <canvas id="canvasFoto"></canvas>
    <button id="btnGuardar">Guardar imagen</button>
  </main>

  <script>
    const videoCam = document.getElementById("videoCam");
    const canvasFoto = document.getElementById("canvasFoto");
    const ctx = canvasFoto.getContext("2d");
    const btnGuardar = document.getElementById("btnGuardar");

    navigator.mediaDevices.getUserMedia({ video: true })
      .then(media => videoCam.srcObject = media)
      .catch(err => alert("No se pudo acceder a la c치mara: " + err));

    const Voz = window.SpeechRecognition || window.webkitSpeechRecognition;
    const escucha = new Voz();
    escucha.lang = "es-ES";
    escucha.continuous = true;

    escucha.onresult = e => {
      let frase = e.results[e.results.length - 1][0].transcript.toLowerCase().trim();
      if (frase.includes("captura")) {
        tomarCaptura();
      }
    };
    escucha.start();

    function tomarCaptura() {
      canvasFoto.width = videoCam.videoWidth;
      canvasFoto.height = videoCam.videoHeight;
      ctx.drawImage(videoCam, 0, 0, canvasFoto.width, canvasFoto.height);
    }

    btnGuardar.addEventListener("click", () => {
      const enlace = document.createElement("a");
      enlace.download = "captura.png";
      enlace.href = canvasFoto.toDataURL("image/png");
      enlace.click();
    });
  </script>
</body>
